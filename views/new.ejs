<%- include("./partials/header.ejs") %>
<div class="container" style="margin: 5em">
  <form action="/team" method="POST">
    <div class="form-group">
      <label for="logoUrl">LogoUrl</label>
      <input
        type="text"
        class="form-control"
        id="logoUrl"
        aria-describedby="emailHelp"
        name="logoUrl"
        placeholder="eg. http://www.example.com/some.ping"
      />
      <small id="emailHelp" class="form-text text-muted"
        >Please paste the image address of your Cohort logo.</small
      >
    </div>
    <div class="form-group">
      <label for="name">Name of your Cohort</label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>
    <div class="form-group">
      <label for="members">Members</label>
      <input type="text" class="form-control" id="members" name="members" />
      <small id="emailHelp" class="form-text text-muted"
        >Please add team members seperated by commas ','</small
      >
    </div>

    <div>
      <button
        class="btn btn-primary"
        type="submit"
        style="margin-bottom: 0.5em;"
      >
        Create New Cohort
      </button>
    </div>
  </form>
</div>

<%- include("./partials/footer.ejs") %>
